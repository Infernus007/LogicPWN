[flake8]
max-line-length = 88

ignore =
    E203,
    W503,
    E133,
    E501

exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    *.egg-info,
    build,
    dist,
    .tox,
    doks,
    scripts

select = F, E, W

max-complexity = 10

per-file-ignores =
    tests/*:E501
    examples/*:E501
    __init__.py:F401
